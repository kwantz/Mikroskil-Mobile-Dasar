<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.kwantz.mobiledasar.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blPink">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/ic_arrow_back_white_24dp"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/title_bar"
                android:gravity="center|start"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:text="Saya suka sekali dengan doraemon karena doraemon adalah doraemon"/>
        </LinearLayout>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/ic_favorite_border_white_24dp"
            android:layout_gravity="right"
            android:padding="10dp"/>
        <ImageView
            android:id="@+id/kerbel"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/shpc"
            android:layout_gravity="right"
            android:padding="10dp"/>
    </LinearLayout>

    <include layout="@layout/content_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_margin="5dp"
                android:text="Kirim Pesanan"
                android:textAllCaps="false"
                android:background="#eee"/>
            <Button
                android:id="@+id/beli"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_margin="5dp"
                android:background="@color/blPink"
                android:text="Beli"
                android:textColor="#ffffff"
                android:textAllCaps="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="Nego Harga"
                android:background="#ffcb3d"
                android:textAllCaps="false"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>


