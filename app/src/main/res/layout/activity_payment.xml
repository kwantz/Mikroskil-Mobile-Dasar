                                android:layout_height="wrap_content"
                                android:text="0700 000 899 992"
                                android:textColor="@color/black"
                                android:textAlignment="textEnd"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Salin"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:id="@+id/salin_mandiri"
                                android:textColor="@color/blPink"
                                android:clickable="true"
                                android:textAlignment="textEnd"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lineGrey"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:layout_marginTop="8dp"
                            app:srcCompat="@drawable/mandiri_syariah"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bank BSM, Jakarta"
                                android:textColor="@color/black"
                                android:textAlignment="textEnd"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="778 887 7708"
                                android:textColor="@color/black"
                                android:textAlignment="textEnd"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Salin"
                                android:textStyle="bold"
                                android:id="@+id/salin_syariah"
                                android:textSize="12sp"
                                android:textColor="@color/blPink"
                                android:clickable="true"
                                android:textAlignment="textEnd"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lineGrey"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:layout_marginTop="8dp"
                            app:srcCompat="@drawable/bni"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bank BNI, Jakarta"
                                android:textColor="@color/black"
                                android:textAlignment="textEnd"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="023 827 2088"
                                android:textColor="@color/black"
                                android:textAlignment="textEnd"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Salin"
                                android:textStyle="bold"
                                android:id="@+id/salin_bni"
                                android:textSize="12sp"
                                android:textColor="@color/blPink"
                                android:clickable="true"
                                android:textAlignment="textEnd"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lineGrey"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:layout_marginTop="8dp"
                            app:srcCompat="@drawable/bri"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bank BRI, Jakarta"
                                android:textColor="@color/black"
                                android:textAlignment="textEnd"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="034 101 000 743 303"
                                android:textColor="@color/black"
                                android:textAlignment="textEnd"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Salin"
                                android:textStyle="bold"
                                android:id="@+id/salin_bri"
                                android:textSize="12sp"
                                android:textColor="@color/blPink"
                                android:clickable="true"
                                android:textAlignment="textEnd"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Pembelianmu dicatat dengan nomor tagihan"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="pembayaran "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blPink"
                        android:clickable="true"
                        android:id="@+id/to_pay_detail"
                        android:text="BL18116U88PUINV."/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/black"
                    android:text="Bukalapak akan melakukan verifikasi otomatis \npaling lama 30 menit setelah kamu melakukan\npembayaran."/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:background="@color/blPink"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:text="Lihat tagihan pembayaran"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Ubah Metode Pembayaran"
                    android:background="@color/white"
                    android:textColor="@color/blPink"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:id="@+id/btn_ubah_metode"/>
            </LinearLayout>
        </LinearLayout> /*Close*/
    </ScrollView>

</LinearLayout>
