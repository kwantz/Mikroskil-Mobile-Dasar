                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BATAS WAKTU PEMBAYARAN"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Minggu, 14 Jan 2018, 09:20 WIB"
                    android:textSize="16sp"
                    android:layout_marginBottom="24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JUMLAH TAGIHAN"
                    android:textSize="12sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Rp80.367"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/blPink"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:text="Salin"
                        android:id="@+id/salin_harga"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#ffffe5"
                    android:padding="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textColor="#666600"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transfer tepat hingga "/>
