                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:layout_marginTop="8dp"
                            app:srcCompat="@drawable/bca"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bank BCA, Jakarta"
                                android:textColor="@color/black"
                                android:textAlignment="textEnd"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="731 025 2527"
                                android:textColor="@color/black"
                                android:textAlignment="textEnd"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Salin"
                                android:textStyle="bold"
                                android:id="@+id/salin_bca"
                                android:textSize="12sp"
                                android:textColor="@color/blPink"
                                android:clickable="true"
                                android:textAlignment="textEnd"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lineGrey"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:layout_marginTop="8dp"
                            app:srcCompat="@drawable/mandiri"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bank Mandiri, Jakarta"
                                android:textColor="@color/black"
                                android:textAlignment="textEnd"/>
                            <TextView
